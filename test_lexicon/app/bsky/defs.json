{
  "lexicon": 1,
  "id": "app.bsky.defs",
  "defs": {
    "postView": {
      "type": "object",
      "required": ["uri", "cid", "author"],
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "cid": { "type": "string", "format": "cid" },
        "author": {
          "type": "ref",
          "ref": "#profileViewBasic"
        },
        "labels": {
          "type": "array",
          "items": { "type": "ref", "ref": "com.atproto.defs#label" },
        },
      },
    },
    "profileViewBasic": {
      "type": "object",
      "required": ["did", "handle"],
      "properties": {
        "did": { "type": "string", "format": "did" },
        "handle": { "type": "string", "format": "handle" },
        "displayName": {
          "type": "string",
          "maxGraphemes": 64,
          "maxLength": 640
        },
        "avatar": { "type": "string", "format": "uri" },
        "labels": {
          "type": "array",
          "items": { "type": "ref", "ref": "com.atproto.defs#label" }
        },
        "createdAt": { "type": "string", "format": "datetime" }
      }
    }
  }
}
